# ============================================
# SupportHub Environment Configuration
# ============================================
# Copy this file to .env and update with your values

# ================================
# REQUIRED - Application Settings
# ================================

# Environment mode (development, production)
NODE_ENV=development

# Application port
PORT=5005

# ================================
# REQUIRED - Database Configuration
# ================================

# PostgreSQL connection string
# Production: Use SSL/TLS (sslmode=require)
# Example: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=postgresql://supporthub:password@localhost:5432/supporthub

# ================================
# REQUIRED - Security
# ================================

# Session secret (CRITICAL: Change in production!)
# Generate with: openssl rand -base64 64
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Trust proxy when behind nginx/load balancer (1 = enabled)
TRUST_PROXY=1

# ================================
# OPTIONAL - Email Configuration
# ================================

# SendGrid API Key for email notifications
SENDGRID_API_KEY=

# Verified sender email address
VERIFIED_SENDER_EMAIL=noreply@yourdomain.com

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ================================
# OPTIONAL - SMS Configuration
# ================================

# Twilio for SMS functionality
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ================================
# OPTIONAL - WhatsApp Configuration
# ================================

WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=

# ================================
# OPTIONAL - Object Storage
# ================================

# Google Cloud Storage
GCS_BUCKET_NAME=
GCS_PROJECT_ID=

# Local storage paths
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# ================================
# OPTIONAL - Advanced Settings
# ================================

# CORS origin
CORS_ORIGIN=https://yourdomain.com

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ================================
# Production Deployment Checklist
# ================================
# Before deploying:
# ✅ Change SESSION_SECRET to a strong random value
# ✅ Set NODE_ENV=production
# ✅ Use DATABASE_URL with SSL (sslmode=require)
# ✅ Configure email service (SendGrid or SMTP)
# ✅ Update default admin password after first login
# ✅ Set up SSL/HTTPS certificates
# ✅ Configure firewall rules
# ✅ Set up automated backups
