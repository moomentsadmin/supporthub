FROM node:20-slim

WORKDIR /app

# Install openssl (needed for some node cryptos or database connections)
RUN apt-get update && apt-get install -y openssl procps

# Create app user
RUN groupadd -g 1001 nodejs && \
    useradd -u 1001 -g nodejs -s /bin/sh -m supporthub

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
# Force clean install, reusing logic from debug attempt
RUN rm -f package-lock.json && npm install

# Copy source code
COPY . .

# Set permissions
RUN chown -R supporthub:nodejs /app && \
    mkdir -p uploads logs && \
    chown -R supporthub:nodejs uploads logs

USER supporthub

# Expose port
EXPOSE 5000

# Run in development mode
CMD ["npm", "run", "dev"]
